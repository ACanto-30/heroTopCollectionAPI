@model heroTopCollectionAPI.Models.Users

@{
    ViewData["Title"] = "SignUpView";
}

<h2>Register</h2>

<form asp-action="Register" method="post">
    <div>
        <label>Email</label>
        <input asp-for="Email" type="email" required />
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password" type="password" required />
    </div>
    <button type="submit">Register</button>
</form>

<p>¿Ya te registraste? <a href="sign-in">Inicia sesión</a></p>

