@model heroTopCollectionAPI.Models.Users

@{
    ViewData["Title"] = "SignInView";
}

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div>
        <label>Email</label>
        <input asp-for="Email" type="email" required />
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password" type="password" required />
    </div>
    <button type="submit">Login</button>
</form>

<p>¿Aún no tienes cuenta? <a href="sign-up">Regístrate</a></p>
<p><a href="/Auth/ForgotPassword">¿Olvidaste tu contraseña?</a></p>